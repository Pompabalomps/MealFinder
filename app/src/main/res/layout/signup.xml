<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Signup"
    android:background="@drawable/loginbg">

    <ImageButton
        android:id="@+id/signupBackBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/backarrow"
        android:backgroundTint="@color/milk"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up!"
        android:textSize="45dp"
        android:fontFamily="@font/kollektif_bolditalic"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/etSignupEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/kollektif_bolditalic"
        android:textColorHint="@color/gray"
        android:inputType="text"
        android:background="@drawable/inputborder"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:padding="5dp" />

    <EditText
        android:id="@+id/etSignupPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/kollektif_bolditalic"
        android:textColorHint="@color/gray"
        android:inputType="textPassword"
        android:background="@drawable/inputborder"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:padding="5dp" />

    <EditText
        android:id="@+id/etSignupPassword2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password again"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/kollektif_bolditalic"
        android:textColorHint="@color/gray"
        android:inputType="textPassword"
        android:background="@drawable/inputborder"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="5dp" />

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/kollektif_bolditalic"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"/>

    <TextView
        android:id="@+id/tvSignupFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:fontFamily="@font/kollektif_bolditalic"
        android:textSize="20dp" />
</androidx.appcompat.widget.LinearLayoutCompat>