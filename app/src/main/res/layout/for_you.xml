<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForYou"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >

    <ImageButton
        android:id="@+id/fyBackBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/backarrow"
        android:backgroundTint="@color/milk"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="-60dp"
        android:layout_gravity="left"
        />

    <TextView
        android:id="@+id/fyItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bread Sandwich"
        android:textColor="@color/black"
        android:fontFamily="@font/kollektif_bolditalic"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/kollektif_bolditalic"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="-57dp"
        android:translationZ="90dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/fyDetailBtn"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Show more!"
        android:backgroundTint="@color/purple"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/button_gradient"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/fyAddToListBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:text="Add recipe!"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/kollektif_bolditalic"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>